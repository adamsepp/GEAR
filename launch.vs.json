{
  // Launch configuration for Visual Studio remote debugging.
  // Each remoteMachineName tries to read from an environment variable,
  // but falls back to a sensible default if not set.
  // Example:
  //   Windows: setx GEAR_REMOTE_MAC "user@MacBook.local"
  //   Linux/macOS: export GEAR_REMOTE_MAC=user@MacBook.local
  //
  // For more info, see Docs/DEVELOPMENT.md

  "version": "0.2.1",
  "configurations": [
    {
      "name": "Gear (macOS)",
      "type": "cppdbg",
      "debuggerFlavor": "lldb",
      "MIMode": "lldb",

      "miDebuggerPath": "/usr/local/bin/lldb-mi",
      "project": "CMakeLists.txt",
      "projectTarget": "Gear",

      "remoteMachineName": "${env:GEAR_REMOTE_MAC:adamsepp@MacBook.local}",
      "program": "${remoteBuildRoot}/bin/Gear",
      "currentDir": "${remoteBuildRoot}/bin",

      "stopAtEntry": false,
      "args": [],
      "env": {}
    },
    {
      "name": "Gear (Raspberry Pi)",
      "type": "cppdbg",
      "MIMode": "gdb",

      "miDebuggerPath": "/usr/bin/gdb",
      "project": "CMakeLists.txt",
      "projectTarget": "Gear",

      "remoteMachineName": "${env:GEAR_REMOTE_RPI:adamsepp@raspberrypi.local}",
      "program": "${remoteBuildRoot}/bin/Gear",
      "currentDir": "${remoteBuildRoot}/bin",

      "stopAtEntry": false,
      "args": [],
      "env": {}
    }
  ]
}
